<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:background="@color/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/configToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@color/colorTitleText" />

    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorCard"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:paddingLeft="10dp"
            android:text="@string/ConfigPVS"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="@string/ConfigOptions"
            android:fontFamily="sans-serif-thin"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="20dp"
            >

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/ConfigPortTitle"
                android:textSize="15dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ConfiginPort1"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ConfiginPortHint1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textAlignment="center"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/ConfigIntervalTitle"
                android:textSize="15dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ConfiginInterv1"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:textAlignment="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ConfiginIntervHint1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textAlignment="center"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="15dp"
                android:text="[seg]"/>

        </LinearLayout>

    </LinearLayout>

    <!-- 2DO SENSOR -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorCard"
        android:padding="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/configTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/ConfigECG"
            android:fontFamily="sans-serif-thin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="@string/ConfigOptions"
            android:fontFamily="sans-serif-thin"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="20dp"
            >

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/ConfigPortTitle"
                android:textSize="15dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ConfiginPort2"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ConfiginPortHint2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textAlignment="center"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/ConfigIntervalTitle"
                android:textSize="15dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ConfiginInterv2"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:textAlignment="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ConfiginIntervHint2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textSize="15dp"
                android:text="[seg]"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
